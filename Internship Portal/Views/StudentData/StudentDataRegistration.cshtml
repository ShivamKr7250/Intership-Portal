@model Student

<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Student Data Form</h3>

                        @if (TempData["error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["error"]</div>
                        }

                        @if (TempData["success"] != null)
                        {
                            <div class="alert alert-success">@TempData["success"]</div>
                        }
                        <div asp-validation-summary="All"></div>
                        <form asp-action="StudentDataRegistration" asp-controller="Student" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="StudentId" type="number" class="form-control form-control-lg" required />
                                        <label class="form-label">Student ID</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Name" type="text" class="form-control form-control-lg" required />
                                        <label class="form-label">Full Name</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="DOB" type="date" class="form-control form-control-lg" required />
                                        <label class="form-label">Date of Birth</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <h6 class="mb-2 pb-1">Gender:</h6>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="Male" />
                                        <label class="form-check-label">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="Female" />
                                        <label class="form-check-label">Female</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="Other" />
                                        <label class="form-check-label">Other</label>
                                    </div>
                                </div>
                            </div>

                            <h5>Contact Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Email" type="email" class="form-control form-control-lg" required />
                                        <label class="form-label">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Contact" type="tel" class="form-control form-control-lg" required />
                                        <label class="form-label">Phone Number</label>
                                    </div>
                                </div>
                            </div>

                            <h5>Address Details</h5>
                            <div class="row">
                                <div class="col-md-4 mb-4">
                                    <input asp-for="Address" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Address</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="City" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">City</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="State" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">State</label>
                                </div>
                            </div>

                            <h5>Academic Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Department" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Department</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Course" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Course</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Section" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Section</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Year" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Year</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Specialization" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Specialization</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-4">
                                    <input asp-for="Batch" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">Batch</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="CGPA" type="number" step="0.01" class="form-control form-control-lg" required />
                                    <label class="form-label">CGPA</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="Backlogs" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">Backlogs</label>
                                </div>
                            </div>

                            <h5>Professional Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Skills" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Skills</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Project" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Project</label>
                                </div>
                            </div>

                            <h5>Additional Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="GitHubProfile" type="url" class="form-control form-control-lg" />
                                    <label class="form-label">GitHub Profile</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="LinkedInProfile" type="url" class="form-control form-control-lg" />
                                    <label class="form-label">LinkedIn Profile</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="ExpectedSalary" type="number" class="form-control form-control-lg" />
                                    <label class="form-label">Expected Salary</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="PreferredJobLocation" type="text" class="form-control form-control-lg" />
                                    <label class="form-label">Preferred Job Location</label>
                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}