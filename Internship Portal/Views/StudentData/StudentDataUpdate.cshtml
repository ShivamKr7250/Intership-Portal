@model Student

<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Student Data Form</h3>

                        @if (TempData["error"] != null)
                        {
                                <div class="alert alert-danger">@TempData["error"]</div>
                        }

                        @if (TempData["success"] != null)
                        {
                                <div class="alert alert-success">@TempData["success"]</div>
                        }

                        <form asp-action="StudentDataRegistration" asp-controller="StudentData" method="post">
                            <input asp-for="StudentId" hidden />
                            <input asp-for="UserId" hidden />
                            <div asp-validation-summary="All"></div>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="RollNumber" type="text" class="form-control form-control-lg" required />
                                        <label class="form-label">Roll Number</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Name" type="text" class="form-control form-control-lg" required />
                                        <label class="form-label">Full Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="ParentName" type="text" class="form-control form-control-lg" required />
                                        <label class="form-label">Parent Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="ParentContact" type="text" class="form-control form-control-lg" required />
                                        <label class="form-label">Parent Contact</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="DOB" type="date" class="form-control form-control-lg" required />
                                        <label class="form-label">Date of Birth</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <h6 class="mb-2 pb-1">Gender:</h6>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="Male" />
                                        <label class="form-check-label">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="Female" />
                                        <label class="form-check-label">Female</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="Other" />
                                        <label class="form-check-label">Other</label>
                                    </div>
                                </div>
                            </div>

                            <h5>Contact Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Email" type="email" class="form-control form-control-lg" required />
                                        <label class="form-label">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Contact" type="tel" class="form-control form-control-lg" required />
                                        <label class="form-label">Phone Number</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Nationality" type="text" class="form-control form-control-lg" required />
                                        <label class="form-label">Nationality</label>
                                    </div>
                                </div>
                            </div>

                            <h5>Address Details</h5>
                            <div class="row">
                                <div class="col-md-4 mb-4">
                                    <input asp-for="Address" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Address</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="City" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">City</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="State" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">State</label>
                                </div>
                            </div>

                            <h5>Academic Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Department" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Department</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Course" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Course</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <select asp-for="Section" class="form-control">
                                        <option value="" disabled selected>Select Section</option>
                                        <option value="A">A</option>
                                        <option value="B">B</option>
                                        <option value="C">C</option>
                                        <option value="D">D</option>
                                        <option value="E">E</option>
                                        <option value="F">F</option>
                                        <option value="G">G</option>
                                        <option value="H">H</option>
                                        <option value="I">I</option>
                                    </select>
                                    <label class="form-label">Section</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <select asp-for="Year" class="form-control">
                                        <option value="" disabled selected>Select the Year</option>
                                        <option value="1">1st Year</option>
                                        <option value="2">2nd Year</option>
                                        <option value="3">3rd Year</option>
                                        <option value="4">4th Year</option>
                                    </select>
                                    <label class="form-label">Year</label>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <input asp-for="Specialization" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Specialization</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="MatricPercentage" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">10th Percentage</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="InterPercentage" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">12th Percentage</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="DiplomaPercentage" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">Diploma Percentage</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="GraduationPercentage" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">Graduation Percentage</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="PostGraduationPercentage" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">Post Graduation Percentage</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-4">
                                    <input asp-for="Batch" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">Batch</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="CGPA" type="number" step="0.01" class="form-control form-control-lg" required />
                                    <label class="form-label">CGPA</label>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <input asp-for="Backlogs" type="number" class="form-control form-control-lg" required />
                                    <label class="form-label">Backlogs</label>
                                </div>
                            </div>

                            <h5>Professional Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Skills" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Skills</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Project" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Project</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Certifications" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">Certifications</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="InternshipExperience" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">InternshipExperience</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="ExtracurricularActivities" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">ExtracurricularActivities</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="LanguagesKnown" type="text" class="form-control form-control-lg" required />
                                    <label class="form-label">LanguagesKnown</label>
                                </div>
                            </div>

                            <h5>Additional Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="GitHubProfile" type="url" class="form-control form-control-lg" />
                                    <label class="form-label">GitHub Profile</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="LinkedInProfile" type="url" class="form-control form-control-lg" />
                                    <label class="form-label">LinkedIn Profile</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="Resume" type="url" class="form-control form-control-lg" />
                                    <label class="form-label">Resume</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <input asp-for="ExpectedSalary" type="number" class="form-control form-control-lg" />
                                    <label class="form-label">Expected Salary</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="PreferredJobLocation" type="text" class="form-control form-control-lg" />
                                    <label class="form-label">Preferred Job Location</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="WorkAuthorization" type="text" class="form-control form-control-lg" />
                                    <label class="form-label">Work Authorization</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label class="form-label">Placed OR NOT</label>
                                    <select asp-for="IsPlaced" class="form-control form-control-lg">
                                        <option value="true">Yes</option>
                                        <option value="false">No</option>
                                    </select>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <input asp-for="PlacedCompany" type="text" class="form-control form-control-lg" />
                                    <label class="form-label">Placed Company</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input asp-for="PlacementDate" type="date" class="form-control form-control-lg" />
                                    <label class="form-label">Placed Date</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <textarea asp-for="AdditionalNotes" class="form-control form-control-lg"></textarea>
                                    <label class="form-label">Additional Notes</label>
                                </div>
                            </div>

                            <div class="col-6 col-md-3">
                                <button type="submit" asp-controller="StudentData" asp-action="StudentDataUpdate" class="btn btn-success w-100">
                                    <i class="bi bi-x-circle"></i> Update
                                </button>
                                <a asp-controller="StudentData" asp-action="Index" class="btn btn-secondary w-100">
                                    <i class="bi bi-x-circle"></i> Back
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
                <partial name="_ValidationScriptsPartial" />
    }
}